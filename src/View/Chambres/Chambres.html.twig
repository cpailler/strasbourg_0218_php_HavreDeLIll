{% extends 'layout.html.twig' %}
{% block title %}Chambres{% endblock %}
    {% block stylesheet %}
        <link rel="stylesheet" href="/assets/css/chambres.css">
    {% endblock %}

    {% block content %}

        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12">
                        <h1>LES CHAMBRES DU HAVRE DE L'ILL</h1>
                    </div>
                </div>

                <!--Selection de critères-->
                <form action="" method="post" class="form-group">
                    <br><br>
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-xs-12 col-md-2">
                            <div class="controls">
                                <label for="style">Style</label>
                                <select name="style" class="form-control">
                                    <option value="" {% if select.0=="" %}selected{% endif %}></option>
                                    <option value="Classique" {% if select.0=="Classique" %}selected{% endif %}>
                                        Classique / Classic
                                    </option>
                                    <option value="Moderne" {% if select.0=="Moderne" %}selected{% endif %}>Moderne /
                                        Modern
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-2">
                            <div class="controls">
                                <label for="salleDeBain">Bain / Bathroom</label>
                                <select name="salleDeBain" class="form-control">
                                    <option value="" {% if select.1=="" %}selected{% endif %}></option>
                                    <option value="Baignoire" {% if select.1=="Baignoire" %}selected{% endif %}>Baththub
                                        / Baignoire
                                    </option>
                                    <option value="Douche" {% if select.1=="Douche" %}selected{% endif %}>
                                        Shower/Douche
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-2">
                            <div class="controls">
                                <label for="literie">Literie / Bedding</label>
                                <select name="literie" class="form-control">
                                    <option value="" {% if select.2=="" %}selected{% endif %}></option>
                                    <option value="Simple" {% if select.2=="Simple" %}selected{% endif %}>Lit simple /
                                        Single Bed
                                    </option>
                                    <option value="Double" {% if select.2=="Double" %}selected{% endif %}>Lit double /
                                        Double Bed
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-1">
                            <div class="checkbox">
                                <label><input type="checkbox" name="PMR" value="pmr"
                                              {% if select.3 %}checked{% endif %}><i
                                            class="fas fa-wheelchair fa-2x"></i></label>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-1">
                            <button type="submit" name="submit" class="btn">Valider</button>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                </form> <!-- /.form-group -->
                {% if error %}
                    <div class="alert alert-danger">
                        <strong>Oops!</strong> Aucune chambre ne correspond à votre sélection.
                    </div>
                {% endif %}


                <!--Chambre gauche-->
                {% for i,chambre in datas %}
                    {% if i!=0 %}
                        <hr>{% endif %}
                    {% if i%2==0 %}

                        <div class="row ligne_haut">
                            <div class="col-xs-1"></div>
                            <div class="col-xs-12 col-md-3">
                                <div class="slider">
                                    <div id="{{ i }}" class="carousel slide carchambres center-block"
                                         data-ride="carousel">
                                        <!-- Carousel indicators -->
                                        <ol class="carousel-indicators">
                                            <li data-target="#{{ i }}" data-slide-to="0" class="active"></li>
                                            <li data-target="#{{ i }}" data-slide-to="1"></li>
                                        </ol>
                                        <!-- Wrapper for carousel items -->
                                        <div class="carousel-inner">
                                            {% for img in chambre.urlImage %}
                                                <div class="item {% if loop.index == 1 %} active {% endif %}">
                                                    <img class="item" src="{{ img.urlImage }}" alt="Other slide">
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <!-- Carousel controls -->
                                        <a class="carousel-control left" href="#{{ i }}" data-slide="prev">
                                            <span class="glyphicon glyphicon-chevron-left"></span>
                                        </a>
                                        <a class="carousel-control right" href="#{{ i }}" data-slide="next">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-7">
                                <div class="row">
                                    <div class="col-xs-12 col-md-12 critere">
                                        <h2 class="chambres">{{ chambre.titre | upper }} </h2>
                                        <h3 class="chambres">{{ chambre.prix }}€ TTC/nuit</h3>
                                        <hr>
                                    </div>
                                </div>
                                <div class="row center-block">
                                    <div class="col-xs-12 col-md-12">
                                        <p><br>{{ chambre.texte }}</p>
                                        <br>
                                        <p style="text-align: center;"><i class="fas fa-home"></i> {{ chambre.style }} -
                                            <i class="fas fa-bed"></i> {{ chambre.literie }} - <i
                                                    class="fas fa-bath"></i> {{ chambre.salleDeBain }} {% if chambre.accessibilite == 'Oui' %}-
                                                <i class="fas fa-wheelchair"></i>{% endif %}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-1"></div>
                        </div>
                        <div class="row ligne_bas">
                            <div class="col-xs-12 col-md-12">
                                <form class="" action="/Reservation" method="post">
                                    <input type="hidden" name="{{ chambre.id }}">
                                    <button type="submit" class="btn center-block">Réserver</button>
                                </form>
                                <br>
                            </div>
                        </div>

                    {% else %}

                        <!--chambre droite-->
                        <div class="row ligne_haut">
                            <div class="col-xs-1"></div>
                            <div class="col-xs-12 col-md-7">
                                <div class="row">
                                    <div class="col-xs-12 col-md-12 critere">
                                        <h2 class="chambres">{{ chambre.titre | upper }} </h2>
                                        <h3 class="chambres">{{ chambre.prix }}€ TTC/nuit</h3>
                                        <hr>
                                    </div>
                                </div>
                                <div class="row center-block">
                                    <div class="col-xs-12 col-md-12">
                                        <p><br>{{ chambre.texte }}</p>
                                        <br>
                                        <p style="text-align: center;"><i class="fas fa-home"></i> {{ chambre.style }} -
                                            <i class="fas fa-bed"></i> {{ chambre.literie }} - <i
                                                    class="fas fa-bath"></i> {{ chambre.salleDeBain }} {% if chambre.accessibilite == 'Oui' %}-
                                                <i class="fas fa-wheelchair"></i>{% endif %}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-3">
                                <div class="slider">
                                    <div id="{{ i }}" class="carousel slide carchambres center-block"
                                         data-ride="carousel">
                                        <!-- Carousel indicators -->
                                        <ol class="carousel-indicators">
                                            <li data-target="#{{ i }}" data-slide-to="0" class="active"></li>
                                            <li data-target="#{{ i }}" data-slide-to="1"></li>
                                        </ol>
                                        <!-- Wrapper for carousel items -->
                                        <div class="carousel-inner">

                                            {% for img in chambre.urlImage %}
                                                <div class="item {% if loop.index == 1 %} active {% endif %} ">
                                                    <img src="{{ img.urlImage }}" alt="Other Slide">
                                                </div>
                                            {% endfor %}

                                        </div>
                                        <!-- Carousel controls -->
                                        <a class="carousel-control left" href="#{{ i }}" data-slide="prev">
                                            <span class="glyphicon glyphicon-chevron-left"></span>
                                        </a>
                                        <a class="carousel-control right" href="#{{ i }}" data-slide="next">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-1"></div>
                        </div>
                        <div class="row ligne_bas">
                            <div class="col-xs-12 col-md-12">
                                <form class="" action="/Reservation" method="post">
                                    <input type="hidden" name="{{ chambre.id }}">
                                    <button type="submit" class="btn center-block">Réserver</button>
                                </form>
                                <br>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
        </section>


    {% endblock %}
