{% extends 'layout.html.twig' %}

    {% block stylesheet %}
        <link rel="stylesheet" href="/assets/css/chambres.css">
    {% endblock %}

    {% block content %}

        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12">
                        <h1>LES CHAMBRES DU HAVRE DE L'ILL</h1>
                    </div>
                </div>

                <!--Selection de critères-->
                <div class="row">
                    <div class="container-fluid center-block">
                        <form class="center-block critere" action="Chambres" method="post">
                            <select name="Style" class="">
                                <option value="style">Style</option>
                                <option value="classique">Classique</option>
                                <option value="moderne">Moderne</option>
                            </select>
                            <select name="Literie">
                                <option value="literie">Literie</option>
                                <option value="simple">Lits simples</option>
                                <option value="double">Lit double</option>
                            </select>
                            <select name="SdB">
                                <option value="SbB">Salle de bain</option>
                                <option value="baignoire">Baignoire</option>
                                <option value="douche">Douche</option>
                            </select>
                            <input type="checkbox" name="PMR" value="pmr">Accessibilité PMR
                            <input type="submit" value="Valider">

                        </form>
                    </div>

                </div>


                <!--Chambre gauche-->
                {% for chambre in datas %}
                    {% if chambre.id%4==1 %}
                        <div class="row element">
                            <div class="col-xs-1"></div>
                            <div class="col-xs-3">
                                <div class="slider">
                                    <div id="myCarousel" class="carousel slide carchambres" data-ride="carousel">
                                        <!-- Carousel indicators -->
                                        <ol class="carousel-indicators">
                                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                            <li data-target="#myCarousel" data-slide-to="1"></li>
                                        </ol>
                                        <!-- Wrapper for carousel items -->
                                        <div class="carousel-inner">
                                            {% for img in chambre.urlImage %}
                                                <div class="item {% if loop.index == 1 %} active {% endif %}">
                                                    <img class="item" src="{{ img }}" alt="Other slide">
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <!-- Carousel controls -->
                                        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                                            <span class="glyphicon glyphicon-chevron-left"></span>
                                        </a>
                                        <a class="carousel-control right" href="#myCarousel" data-slide="next">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="container-fluid col-xs-7">
                                <div class="row container-fluid col-xs-12">
                                    <div class="col-xs-12 critere">
                                        <h2 class="chambres">{{ chambre.titre | upper }} </h2>
                                        <h3 class="chambres">{{ chambre.prix }}€ TTC/nuit</h3>
                                        <hr>
                                    </div>

                                </div>
                                <div class="container-fluid col-xs-12">
                                    <div class="col-xs-8 center-block">
                                        <p><br>{{ chambre.texte }}</p>
                                        <form class="" action="" method="post">
                                            <button type="submit" class="btn">Réserver</button>
                                        </form>
                                    </div>
                                    <div class="col-xs-4 panel panel-default">
                                        <div class="panel-heading">Options de la chambre</div>
                                        <div class="panel-body">
                                            <ul>
                                                <li>{{ chambre.style }}</li>
                                                <li>{{ chambre.literie }}</li>
                                                <li>{{ chambre.salleDeBain }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-1"></div>
                        </div>

                    {% else %}
                        <hr>

                        <!--chambre droite-->

                        <div class="row element">
                            <div class="col-xs-1"></div>
                            <div class="container-fluid col-xs-7">
                                <div class="row container-fluid col-xs-12">
                                    <div class="col-xs-12 critere">
                                        <h2 class="chambres">{{ chambre.titre | upper }} </h2>
                                        <h3 class="chambres">{{ chambre.prix }}€ TTC/nuit</h3>
                                        <hr>
                                    </div>

                                </div>
                                <div class="container-fluid col-xs-12">
                                    <div class="col-xs-4 panel panel-default">
                                        <div class="panel-heading">Options de la chambre</div>
                                        <div class="panel-body">
                                            <ul>
                                                <li>{{ chambre.style }}</li>
                                                <li>{{ chambre.literie }}</li>
                                                <li>{{ chambre.salleDeBain }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-xs-8 center-block">
                                        <p><br>{{ chambre.texte }}</p>
                                        <form class="" action="" method="post">
                                            <button type="submit" class="btn pull-right">Réserver</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <div class="slider">
                                    <div id="myCarousel" class="carousel slide carchambres" data-ride="carousel">
                                        <!-- Carousel indicators -->
                                        <ol class="carousel-indicators">
                                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                            <li data-target="#myCarousel" data-slide-to="1"></li>
                                        </ol>
                                        <!-- Wrapper for carousel items -->
                                        <div class="carousel-inner">
                                            <div class="item active">
                                                <img src="http://via.placeholder.com/250x250" alt="First Slide">
                                            </div>
                                            <div class="item">
                                                <img src="http://via.placeholder.com/250x250" alt="Second Slide">
                                            </div>
                                            <div class="item">
                                                <img src="http://via.placeholder.com/250x250" alt="Third Slide">
                                            </div>
                                        </div>
                                        <!-- Carousel controls -->
                                        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                                            <span class="glyphicon glyphicon-chevron-left"></span>
                                        </a>
                                        <a class="carousel-control right" href="#myCarousel" data-slide="next">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-1"></div>
                        </div>
                    {% endif %}
                {% endfor %}
        </section>


    {% endblock %}
