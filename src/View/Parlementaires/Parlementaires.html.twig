{% extends 'layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/parlementaires.css">
{% endblock %}

{% block content %}

    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12">
                    <h1>PRESENTATION</h1>
                </div>
            </div>

            {% for value in Articles %}
                {% if value.id%2==1 %}
                    <div class="row element">
                        <div class="col-xs-12 col-md-1"></div>
                        <div class="col-xs-12 col-md-3">
                            <img class="illustration center-block" src="{{ value.urlImage }}">
                        </div>
                        <div class="col-xs-12 col-md-7">
                            <h2>{{ value.titre | upper }}</h2>
                            <p>{{ value.texte }}</p>
                        </div>
                        <div class="col-xs-12 col-md-1"></div>
                    </div>

                {% else %}
                    <hr>

                    <div class="row element">
                        <div class="col-xs-12 col-md-1"></div>
                        <div class="col-xs-12 col-md-7">
                            <h2>{{ value.titre | upper }}</h2>
                            <p>{{ value.texte }}</p>
                        </div>
                        <div class="col-xs-12 col-md-3">
                            <img class="illustration center-block" src="{{ value.urlImage }}">
                        </div>
                        <div class="col-xs-12 col-md-1"></div>
                    </div>
                {% endif %}
            {% endfor %}

            <hr><br><br><br>

            <div class="row">
                <div class="col-xs-12">
                    <h1>OUR ROOM</h1>
                </div>
            </div>
            <div class="row element">
                {% for i,chambre in chambres %}
                    <div class="col-md-4">
                        <div class="slider">
                            <div id="{{ i }}" class="carousel slide carchambres center-block"
                                 data-ride="carousel">
                                <!-- Carousel indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#{{ i }}" data-slide-to="0" class="active"></li>
                                    <li data-target="#{{ i }}" data-slide-to="1"></li>
                                </ol>
                                <!-- Wrapper for carousel items -->
                                <div class="carousel-inner">
                                    {% for img in chambre.urlImage %}
                                        <div class="item {% if loop.index == 1 %} active {% endif %}">
                                            <img class="item" src="{{ img.urlImage }}" alt="Other slide">
                                        </div>
                                    {% endfor %}
                                </div>
                                <!-- Carousel controls -->
                                <a class="carousel-control left" href="#{{ i }}" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                </a>
                                <a class="carousel-control right" href="#{{ i }}" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                </a>
                            </div>
                        </div>
                        <div class="row center-block">
                            <p style="text-align: center;">
                                {% if chambre.style == 'Classique' %}<i class="fas fa-home"></i> Classic {% else %}<i
                                        class="fas fa-home"></i> Modern {% endif %} -
                                <i class="fas fa-bed"></i> {{ chambre.literie }} -
                                {% if chambre.salleDeBain == 'Baignoire' %}<i
                                        class="fas fa-bath"></i> Bathroom {% else %}<i
                                        class="fas fa-bath"></i> Shower {% endif %}
                                {% if chambre.accessibilite == 'Oui' %}- <i class="fas fa-wheelchair"></i>{% endif %}

                            </p>
                        </div>
                        <form class="" action="/Reservation" method="post">
                            <input type="hidden" name="{{ chambre.id }}">
                            <button type="submit" class="btn center-block">Book</button>
                            <br>
                        </form>
                    </div>
                {% endfor %}
            </div>

    </section>

{% endblock %}
